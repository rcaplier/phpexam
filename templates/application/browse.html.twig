{% extends 'base.html.twig' %}

{% block title %}Parcourir les produits{% endblock %}

{% block body %}
    <h1 class="my-5">Parcourir</h1>
    <div class="row">
        {% for product in products %}
            <div class="col-4 mb-3">
                <div class="card">
                    <img src="{{ asset(uploaded_img_dir ~ product.imgUrl ) }}" class="card-img-top" alt="{{ product.name }}">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">{{ product.name }}</h5>
                        <p class="card-text">{{ product.description }}</p>
                        <p class="card-text fw-bold">{{ product.price }} â‚¬</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
